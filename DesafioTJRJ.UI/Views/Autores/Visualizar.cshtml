@model DesafioTJRJ.UI.ViewModels.AutorViewModel

@{
    ViewData["Title"] = "Visualizar Autor";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" readonly />
        </div>

        <div class="form-group text-right">
            <a asp-action="Editar" asp-route-id="@Model.CodAu" class="btn btn-warning">Editar</a>
            <a asp-action="Index" class="btn btn-primary">Cancelar</a>
        </div>
    </div>
</div>