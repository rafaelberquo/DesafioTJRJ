@model IEnumerable<DesafioTJRJ.UI.ViewModels.AutorViewModel>

@{
    ViewData["Title"] = "Listar Autores";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Cadastrar" class="btn btn-secondary">Cadastrar Novo Autor</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td class="actionColumn">
                    <a asp-action="Editar" asp-route-id="@item.CodAu" class="btn btn-secondary">Editar</a>
                    <a asp-action="Visualizar" asp-route-id="@item.CodAu" class="btn btn-secondary">Visualizar</a>
                    <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" data-id="@item.CodAu" data-name="@item.Nome" data-url="@Url.Action("Remover", "Autores", new { id = item.CodAu })">Excluir</button>
                </td>
            </tr>
        }
    </tbody>
</table>